@{ Layout = null;}<!DOCTYPE html><html><head>    <meta charset="UTF-8">    <meta name="viewport" content="width=device-width, initial-scale=1.0">    @{ ViewBag.Title = Model != null ? "Update Your Data" : "Sign Up"; }    <link href="~/CustomCSS/Registration.css" rel="stylesheet" />    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />    <script src="~/Scripts/bootstrap.bundle.min.js"></script></head><body>    <div class="container-fluid">        <div class="wrapper" style="position:relative;right:10px;">            @if (TempData["Companyerror"] != null)            {            <div id="registrationSuccessMessage" class="alert alert-danger">                @TempData["Companyerror"]            </div>            }            <div class="app">                <form action="@Url.Action("Registration","User")" method="post" id="registrationForm" enctype="multipart/form-data">                    <h2>@ViewBag.Title</h2>                    <div class="input-field1">                        <input type="text" class="d-none" name="CompanyId" id="CompanyId" value="@(Model != null ? Model.CompanyId : 0)" required>                        <div class="row">                            <div class="col-12 col-lg-6  input-field">                                <input type="text" name="CompanyName" id="Companyerror" value="@(Model != null ? Model.CompanyName : string.Empty)" required>                                <label>CompanyName</label>                            </div>                            <div class="col-12  col-lg-6 input-field os">                                <span asp-validation-for="MobileNo" class="text-danger"></span>                                <input type="text" name="MobileNo" id="mobailderror" value="@(Model != null ? Model.MobileNo : string.Empty)" asp-for="MobileNo" required>                                <label asp-for="MobileNo">MobileNumber</label>                            </div>                        </div>                        <div class="row">                            <div class="col-12 col-lg-6 input-field">                                <input type="email" name="EmailId" value="@(Model != null ? Model.EmailId : string.Empty)" id="Emailerror" required>                                <label>Enter your EmailId</label>                            </div>                            <div class="col-12 col-lg-6 input-field os">                                <input type="password" name="Password" value="@(Model != null ? Model.Password : string.Empty)" id="passworderror" required>                                <label>Enter your Password</label>                            </div>                        </div>                        <div class="row">                            <div class="input-field col-12 col-lg-6">                                <input type="text" name="CompanyShortName" value="@(Model != null ? Model.CompanyShortName : string.Empty)" required>                                <label>Company ShortName</label>                            </div>                            <div class="input-field col-12 col-lg-6 os">                                <input type="text" name="PanCardNo" id="Panerror" value="@(Model != null ? Model.PanCardNo : string.Empty)" required>                                <label>Enter your PAN No:</label>                            </div>                        </div>                        <div class="row">                            <div class="input-field col-12 col-lg-6">                                <input type="text" name="GSTNo" id="Gsterror" value="@(Model != null ? Model.GSTNo : string.Empty)" required>                                <label>Enter your GST No:</label>                            </div>                            <div class="input-field col-12 col-lg-6 os">                                <input type="file" name="File" id="file" value="@(Model != null ? Model.File : string.Empty)" required>                            </div>                            <span class="col-12 col-lg-12 mt-1 text-danger" id="passwordvalidation"></span>                        </div>                        <button type="submit" class="buton col-lg-12 col-12 mt-4" id="mybtn">@(Model != null ? "Update" : "Sign UP")</button>                        <div class="register mt-4">                            <p>Have already an account? <a href="~/User/Login">Login here</a></p>                        </div>                    </div>                </form>            </div>        </div>    </div>       <script src="~/Scripts/jquery-3.7.1.min.js"></script>    <script>        $(document).ready(function () {            // form submit error check            $('#mybtn').click(function (e) {                // Prevent the default form submission                e.preventDefault();                var CompanyNameValue = $('#Companyerror').val();                var MobailValue = $('#mobailderror').val();                var passwordvalue = $('#passworderror').val();                var EmailIdValue = $('#Emailerror').val();                var FileValue = $('#file').val();                // pan                var PanValue = $('#Panerror').val();                var regPAN = /[a-zA-z]{5}\d{4}[a-zA-Z]{1}/;                //gst                var GstValue = $('#Gsterror').val();                var reggst = /^([0-9]){2}([a-zA-Z]){5}([0-9]){4}([a-zA-Z]){1}([0-9]){1}([a-zA-Z]){1}([0-9]){1}?$/;                // Reset validation messages                $('#passwordvalidation').html('');                // CompanyName validation                // Check if the first character is a capital letter                if (CompanyNameValue.charAt(0) !== CompanyNameValue.charAt(0).toUpperCase()) {                    $('#Companyerror').focus();                    $('#passwordvalidation').html('First character of Company Name should be a capital letter');                }                // MobileNumber validation                else if (MobailValue.length !== 10) {                    $('#mobailderror').focus();                    $('#passwordvalidation').html('Mobile number should be 10 digits');                }                // Password validation                else if (passwordvalue.length < 8) {                    $('#password').focus();                    $('#passwordvalidation').html('Password must be at least 8 characters long');                }                // EmailId validation                else if (!isValidEmail(EmailIdValue)) {                    $('#Emailerror').focus();                    $('#passwordvalidation').html('Invalid email format');                }                // PAN NUmber validation                else if (!regPAN.test(PanValue)) {                    $('#Panerror').focus();                    $('#passwordvalidation').html('Invalid Pan Number format');                }                // GST NUmber validation                else if (!reggst.test(GstValue)) {                    $('#Gsterror').focus();                    $('#passwordvalidation').html('GST Identification Number is not valid. It should be in this "11AAAAA1111Z1A1" format');                }                // File input validation                else if (FileValue === null || FileValue === '') {                    $('#passwordvalidation').html('Please select a file');                }                // If all validations pass, submit the form                else {                    $('#registrationForm').submit();                }            });            // Method to validate email format            function isValidEmail(email) {                var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;                return emailRegex.test(email);            }        });    </script>    <script>        // Wait for the DOM to be ready        document.addEventListener('DOMContentLoaded', function () {            // Auto-hide the alert after 3 seconds            setTimeout(function () {                $('#registrationSuccessMessage').alert('close');            }, 3000);        });    </script></body></html>@*----------------------------------Registretion Complete--------------->*@