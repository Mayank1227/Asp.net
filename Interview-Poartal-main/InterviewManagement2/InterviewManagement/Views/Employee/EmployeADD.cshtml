@{ Layout = null; }@{ ViewBag.Title = Model != null ? "UpdateEmployee" : "AddEmployee"; }<!DOCTYPE html><html lang="en" dir="ltr"><head>    <meta charset="UTF-8">    <meta name="viewport" content="width=device-width, initial-scale=1.0">    <title> @ViewBag.Title</title>    <link href="~/Content/EmployeeUpdate.css" rel="stylesheet" />    <link href="~/Content/bootstrap.min.css" rel="stylesheet" /></head><body>    <div class="container1">        <div class="title">@ViewBag.Title</div>        <div class="content">            <form action="@Url.Action("EmployeADD","Employee")" method="post" id="EmployeeForm">                <div class="user-details">                    <div class="input-box">                        <span class="details">First Name</span>                        <input type="hidden" name="EmployeeId" id="EmployeeId" value="@(Model != null ? Model.EmployeeId : 0)" />                        <input type="text" placeholder="Enter your name" name="FirstName" id="FirstName" value="@(Model != null ? Model.FirstName : string.Empty)" required>                    </div>                    <div class="input-box">                        <span class="details">Middle Name</span>                        <input type="text" placeholder="Enter your Middle Name" name="MiddleName" id="MiddleName" value="@(Model != null ? Model.MiddleName : string.Empty)" required>                    </div>                    <div class="input-box">                        <span class="details">Last Name</span>                        <input type="text" placeholder="Enter your LastName" name="LastName" id="LastName" value="@(Model != null ? Model.LastName : string.Empty)" required>                    </div>                    <div class="input-box">                        <span class="details">Mobile No</span>                        <input type="text" placeholder="Enter your MobileNo" name="MobileNo" id="MobileNo" value="@(Model != null ? Model.MobileNo : string.Empty)" required>                    </div>                    <div class="input-box">                        <span class="details">Date Of Birth</span>                        <input type="date" placeholder="Enter your DateOfBirth" name="DateOfBirth" value="@(Model != null ? Model.DateOfBirth.ToString("yyyy-MM-dd") : string.Empty)" required>                    </div>                    <div class="input-box ">                        <span class="details">Password</span>                        <input type="password" placeholder="Enter your password" id="password" name="Password" value="@(Model != null ? Model.Password : string.Empty)" required />                        <i class="bi bi-eye-fill pass-toggle-btn"></i>                    </div>                    <div class="input-box">                        <span class="details">Email Id</span>                        <input type="text" placeholder="Enter your EmailId" name="EmailId" id="Email" value="@(Model != null ? Model.EmailId : string.Empty)" required>                    </div>                    <div class="input-box">                        <span class="details">Manager Id</span>                        <input type="text" placeholder="Enter your ManagerId" name="ManagerId" value="@(Model != null ? Model.ManagerId : string.Empty)" required>                    </div>                    <div class="input-box">                        <span class="details" for="inputState">Employee Role</span>                        <!-- <input type="text" placeholder="Enter your Employee Role" required> -->                        <select id="inputState" class="form-select" value="" name="EmployeeRoll" required>                            <option selected>@(Model != null ? Model.EmployeeRoll : "EmployeeRoll")</option>                            <option value="CEO">CEO</option>                            <option value="HR">HR</option>                            <option value="Project Manager">Project Manager</option>                            <option value="Team Lead">Team Lead</option>                            <option value="Senior Developer">Senior Developer</option>                            <option value="Junior Developer">Junior Developer</option>                            <option value="Trainee">Trainee</option>                            <option value="Other">Other</option>                        </select>                    </div>                    <div class="input-box">                        <span class="details">Department Name</span>                        <input type="text" placeholder="Enter your Department Name" value="@(Model != null ? Model.TypeName : string.Empty)" name="TypeName" required>                    </div>                    <div class="input-box">                        <span class="text-danger" id="error"> </span>                    </div>                </div>                <div>                    <a href="/Employee/EmployeList " class="text-secondary fw-bold">Back to List</a>                </div>                <div class="button" id="btn">                    <input type="submit" value="@(Model != null ? "Update" : "Submit")">                </div>            </form>        </div>    </div>    @*--------------------------------------------form Validation*@    <script src="~/Scripts/jquery-3.7.1.min.js"></script>    <script>        $(document).ready(function () {            console.log('jQuery code is executing.');            // form submit error check            $('#btn').click(function (e) {                // Prevent the default form submission                e.preventDefault();                var FirstName = $('#FirstName').val();                var LastName = $('#LastName').val();                var MiddleName = $('#MiddleName').val();                var MobailValue = $('#MobileNo').val();                var EmailIdValue = $('#Email').val();                // Reset validation messages                $('#error').html('');                // First Name and Last Name validation                if (FirstName.length < 2 || FirstName !== FirstName.toUpperCase() ||                    LastName.length < 2 || LastName !== LastName.toUpperCase() ||                    MiddleName.length < 2 || MiddleName !== MiddleName.toUpperCase()) {                    $('#error').html('Name must be Uppercase and Minimum length 2 characters.');                }                // Mobile Number validation                else if (isNaN(MobailValue) || MobailValue.length !== 10) {                    $('#MobileNo').focus();                    $('#error').html('Mobile number should be numeric and 10 digits.');                }                // Email validation                else if (!isValidEmailId(EmailIdValue)) {                    $('#Email').focus();                    $('#error').html('Invalid email format.');                }                // If all validations pass, submit the form                else {                    submitForm();                }            });            // Method to validate email format            function isValidEmailId(email) {                var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;                return emailRegex.test(email);            };            // Method to submitForm            function submitForm() {                $.ajax({                    type: 'POST',                    url: '/Employee/EmployeADD',                    data: new FormData($('#EmployeeForm')[0]),                    processData: false,                    contentType: false,                    success: function (response) {                        if (response.errorDescription) {                            // Display error message in an alert                            alert(response.errorDescription);                        } else {                            // The operation was successful                            window.location.href = '/Employee/EmployeList';                        }                    },                    error: function (error) {                        // Display error message in an alert                        alert('An error occurred during the request please Try Again !');                    }                });            }        });    </script>    @*--------------------------------------------alert messgae*@   </body></html>