@{ Layout = null;}@{ ViewBag.Title = Model != null ? "UpdateForm" : "InterViewForm";}<!DOCTYPE html><html lang="en"><head>    <meta charset="UTF-8" />    <meta name="viewport" content="width=device-width, initial-scale=1.0" />    <meta http-equiv="X-UA-Compatible" content="ie=edge" />    <link href="~/CustomCSS/AddCandidate.css" rel="stylesheet" />    <link href="~/Content/bootstrap.min.css" rel="stylesheet" /></head><body style="background-color: #3f51b533;">    <section class="container1">        <header>@ViewBag.Title</header>        <form action="@Url.Action("AddCandidate","Interview")" class="form" method="post" id="CandidateForm">            <div class="column">                <div class="input-box">                    <input type="hidden" name="CandidateId" id="CandidateId" value="@(Model != null ? Model.CandidateId : 0)" />                    @*<input type="hidden" name="CompanyId" id="CompanyId" value="@(Model != null ? Model.CompanyId : 0)" />                        <input type="hidden" name="CompanyName" id="CompanyName" value="@(Model != null ? Model.CompanyName : string.Empty)" />*@                    <input type="text" placeholder="Enter First name" name="FirstName" id="FirstName" value="@(Model != null ? Model.FirstName : string.Empty)" @*value="@(Model.CandidateId != null ? Model.FirstName.ToString() : string.Empty)"*@ required />                </div>                <div class="input-box">                    <input type="text" placeholder="Enter Last name" name="LastName" id="LastName" value="@(Model != null ? Model.LastName : string.Empty)" required />                </div>            </div>            <div class="column">                <div class="input-box">                    <input type="text" placeholder="Enter phone number" name="MobailNumber" id="MobailNumber" value="@(Model != null ? Model.MobailNumber : string.Empty)" required />                </div>                <div class="input-box">                    <input type="date" placeholder="Enter birth date" name="DOB" value="@(Model != null ? Model.DOB.ToString("yyyy-MM-dd") : string.Empty)" required />                </div>            </div>            <div class="column">                <div class="input-box">                    <input type="text" placeholder="example@example.com" name="Email" id="Email" value="@(Model != null ? Model.Email : string.Empty)" required />                </div>                <div class="input-box">                    <input type="number" placeholder="Age (ex: 23)" name="Age" value="@(Model != null ? Model.Age : string.Empty)" required />                </div>            </div>            <div class="column">                <div class="input-box">                    <input type="text" placeholder="Enter  Qualification" name="Qualification" value="@(Model != null ? Model.Qualification : string.Empty)" required />                </div>                <div class="input-box">                    <input type="text" placeholder=" Enter MasterSkills" name="Skill" value="@(Model != null ? Model.Skill : string.Empty)" required />                </div>                <div class="input-box">                    <input type="text" placeholder="Experience (ex:year?)" name="Experience" value="@(Model != null ? Model.Experience : string.Empty)" required />                </div>            </div>            <div class="input-box address">                <input type="text" placeholder="Enter your Street Address,pincode,etc.," name="Address" value="@(Model != null ? Model.Address : string.Empty)" required />                <div class="column">                    <div class="select-box">                        <select name="Country" value="" required>                            <option hidden>@(Model != null ? Model.Country : "Countery")</option>                            <option value="America">America</option>                            <option value="Japan">Japan</option>                            <option value="India">India</option>                            <option value="Nepal">Nepal</option>                        </select>                    </div>                    <div class="select-box">                        <select name="State" value="" required>                            <option hidden>@(Model != null ? Model.State : "State")</option>                            <option value="andhra_pradesh">Andhra Pradesh</option>                            <option value="arunachal_pradesh">Arunachal Pradesh</option>                            <option value="assam">Assam</option>                            <option value="bihar">Bihar</option>                            <option value="chhattisgarh">Chhattisgarh</option>                            <option value="goa">Goa</option>                            <option value="gujarat">Gujarat</option>                            <option value="haryana">Haryana</option>                            <option value="himachal_pradesh">Himachal Pradesh</option>                            <option value="jammu_and_kashmir">Jammu and Kashmir</option>                            <option value="jharkhand">Jharkhand</option>                            <option value="karnataka">Karnataka</option>                            <option value="kerala">Kerala</option>                            <option value="madhya_pradesh">Madhya Pradesh</option>                            <option value="maharashtra">Maharashtra</option>                            <option value="manipur">Manipur</option>                            <option value="meghalaya">Meghalaya</option>                            <option value="mizoram">Mizoram</option>                            <option value="nagaland">Nagaland</option>                            <option value="odisha">Odisha</option>                            <option value="punjab">Punjab</option>                            <option value="rajasthan">Rajasthan</option>                            <option value="sikkim">Sikkim</option>                            <option value="tamil_nadu">Tamil Nadu</option>                            <option value="telangana">Telangana</option>                            <option value="tripura">Tripura</option>                            <option value="uttar_pradesh">Uttar Pradesh</option>                            <option value="uttarakhand">Uttarakhand</option>                            <option value="west_bengal">West Bengal</option>                        </select>                    </div>                    <!-- city input -->                    <input type="text" placeholder="City Name" name="City" value=" @(Model != null ? Model.City : string.Empty)" required />                </div>            </div>            <div class="column">                <span class="text-danger" id="error"> </span>            </div>            <button type="submit" id="btn"> @(Model != null ? "Update" : "Submit")</button>        </form>    </section>    <script src="~/Scripts/jquery-3.7.1.min.js"></script>    <script>        $(document).ready(function () {            // form submit error check            $('#btn').click(function (e) {                // Prevent the default form submission                e.preventDefault();                var FirstName = $('#FirstName').val();                var LastName = $('#LastName').val();                var MobailValue = $('#MobailNumber').val();                var EmailIdValue = $('#Email').val();                // Reset validation messages                $('#error').html('');                // First Name and Last Name validation                if (FirstName.length < 2 || FirstName !== FirstName.toUpperCase() ||                    LastName.length < 2 || LastName !== LastName.toUpperCase()) {                    $('#error').html('Name must be Uppercase and Minimum length 2 characters.');                }                // Mobile Number validation                else if (isNaN(MobailValue) || MobailValue.length !== 10) {                    $('#error').html('Mobile number should be numeric and 10 digits.');                }                // Email validation                else if (!isValidEmail(EmailIdValue)) {                    $('#error').html('Invalid email format.');                }                else {                    submitForm();                }            });            // Method to validate email format            function isValidEmail(email) {                var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;                return emailRegex.test(email);            }            function submitForm()            {                $.ajax                    ({                    type: 'POST',                    url: '/Interview/AddCandidate',                    data: new FormData($('#CandidateForm')[0]),                    processData: false,                    contentType: false,                    success: function (response) {                        if (response.errorDescription) {                            // Display error message in an alert                            alert(response.errorDescription);                        } else {                            // The operation was successful                            window.location.href = '/Interview/CandidateList';                        }                    },                    error: function (error) {                        // Display error message in an alert                        alert('An error occurred during the request please Try Again !');                    }                });            }        });    </script></body></html>